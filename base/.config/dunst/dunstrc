[global]
    ### Display ###
    monitor = 0
    follow = mouse

    # Width, Height, X, Y
    geometry = "400x5-30+20"

    indicate_hidden = yes
    shrink = no

    transparency = 10
    notification_height = 0
    separator_height = 2
    padding = 12
    horizontal_padding = 12

    frame_width = 2
    frame_color = "#a89984"
    separator_color = frame

    sort = yes
    idle_threshold = 120

    ### Text ###
    font = Inter 11
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 64
    # icon_path is usually handled automatically by dunst looking in standard places

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = rofi -dmenu -p dunst:
    browser = google-chrome-stable

    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

    # Rounded corners (requires compatible WM/compositor)
    corner_radius = 8

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    # Gruvbox Dark Gray / Gray
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#a89984"
    timeout = 10

[urgency_normal]
    # Gruvbox Dark Background / White
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#458588" # Blue border for normal
    timeout = 10

[urgency_critical]
    # Gruvbox Red Background
    background = "#cc241d"
    foreground = "#ebdbb2"
    frame_color = "#fabd2f" # Yellow border for critical
    timeout = 0
