#Volume Mute
"pamixer -t; pkill -SIGRTMIN+10 i3blocks"
    m:0x10 + c:121
    Mod2 + XF86AudioMute 

#Volume Down
"pamixer -d 5; pkill -SIGRTMIN+10 i3blocks"
    m:0x10 + c:122
    Mod2 + XF86AudioLowerVolume 

#Volume Up
"pamixer -i 5; pkill -SIGRTMIN+10 i3blocks"
    m:0x10 + c:123
    Mod2 + XF86AudioRaiseVolume 

#Toggle Mic
"pamixer --default-source -t; pkill -SIGRTMIN+10 i3blocks"
    m:0x0 + c:198
    XF86AudioMicMute 

#Brightness Down
"light -U 2"
    m:0x0 + c:232
    XF86MonBrightnessDown 

#Brightness Up
"light -A 2"
    m:0x0 + c:233
    XF86MonBrightnessUp 

#Wifi On
"iwctl adapter phy0 set-property Powered on"
    m:0x0 + c:246
    XF86WLAN 

#Wifi Off
"iwctl adapter phy0 set-property Powered off"
    m:0x1 + c:246
    Shift + XF86WLAN 

